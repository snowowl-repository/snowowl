<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/accordion.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/accordion.js")" type="text/javascript"> </script>
    <script type="text/javascript">
        $(function () {
            $("#accordian").msAccordion({ defaultid: 0, autodelay: 10 });
        });
    </script>
</head>
<body>
    <div>
        <header>
            <div >
                <div onclick=" javascript:window.location.href = '@Url.Action("Index", "Home")';">
                    <div id="logoContainer">
                        <img src="@Url.Content("~/Content/images/logo.png")"  alt="Comapany logo" height="55px"/></div>
                    <section id="titles" style="float: left;">
                        <h1>
                            Snow Owl</h1>
                        <h2>
                            Software development company</h2>
                    </section></div>
                <section style="float: left;">
                    <h3 style="color: White; font-style: italic; padding: 15px 0 0 90px; margin: 0; font-family: Segoe UI">
                        "Ideals don't exist, but we strive to them"</h3>
                </section>
                <div style="float: right; padding-top: 10px">
                    <img src="../../Content/images/arrow-down.png" alt="language" />
                </div>
            </div>
        </header>
        <div class="clearing">
        </div>
        <hr style="padding: 0; margin: 0; border-color: Black;" />
        <section class="top-menu" style="background: #ccc; height: 30px;">
            @Html.Partial("_TopMenuPartial")
        </section>
        <section class="content-wrapper">
            <section id="main">
                <section>
                    @RenderBody()
                </section>
            </section>
            <div class="clearing">
            </div>
        </section>
        <footer>
            <div style="height: 40px; background-color: #ccc">
            </div>
            <nav>
                <section class="footer-navigation-section" style="margin: 0">
                    <div class="navigation-section-title">
                        Services
                    </div>
                    <div class="navigation-section-content">
                        <ul>
                            <li>Custom Software Development</li>
                            <li>Mobile Development</li>
                            <li>Web Development</li>
                        </ul>
                    </div>
                </section>
                <section class="footer-navigation-section">
                    <div class="navigation-section-title">
                        Web Development
                    </div>
                    <div class="navigation-section-content">
                        <ul>
                            <li>HTML 5</li>
                            <li>ASP.NET</li>
                            <li>ASP.NET MVC</li>
                            <li>Orchard CMS</li>
                            <li>DNN CMS</li>
                        </ul>
                    </div>
                </section>
                <section class="footer-navigation-section">
                    <div class="navigation-section-title">
                        Mobile Development
                    </div>
                    <div class="navigation-section-content">
                        <ul>
                            <li>Windows Phone 7</li>
                        </ul>
                    </div>
                </section>
                <section class="footer-navigation-section">
                    <div class="navigation-section-title">
                        Company
                    </div>
                    <div class="navigation-section-content">
                        <ul>
                            <li>About us </li>
                            <li>Contact us </li>
                            <li>News</li>
                            <li>Careers </li>
                        </ul>
                    </div>
                </section>
            </nav>
        </footer>
    </div>
</body>
</html>
