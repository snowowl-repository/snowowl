@model SnowOwl.Models.AskForAQuoteModel
<script src="@Url.Content("~/Scripts/jquery-1.8.1.min.js")" type="text/javascript"></script>
<style>
    textarea {
        height: 150px;
        resize: none;
    }
    .inputbox, input[type="text"], input[type="password"], input[type="email"], textarea {
        background: transparent;
        border: 1px solid #DDD;
        color: #666;
        margin: 10px;
        padding: 10px;
        display: block;
        min-width: 250px;
        width: 100%;
    }

    input[type="submit"] {
        background: #F99420;
        border: 0 none;
        color: white;
        display: inline-block;
        font-family: 'NovecentowideUltraLightBold';
        margin: 0px 4px 3px 0px;
        padding: 8px 10px;
        cursor: pointer;
        overflow: visible;
        min-width: 100px;
        float: right;
        margin-right: -30px;
    }
    .field-validation-error {
        margin-left: 10px;
        color: red;
    }
    input[type="submit"]:hover { background: #565656; }
    #askForm form{
        width: 300px;
        height: 500px;
    }
</style>          
<script type="text/javascript">
    $(function () {
        $('.text-box').each(function () {
            var name = getNameAttr($(this)) + '...';
            $(this).val(name);
        });
        $('.text-box').focusin(function () {
            var name = getNameAttr($(this));
            if ($.trim($(this).val()) == name + '...') {
                $(this).val('');
            }
        });
        $('.text-box').focusout(function () {
            var name = getNameAttr($(this));
            var value = $.trim($(this).val());
            if (value == '' || value == name + '...') {
                $(this).val(name + '...');
            }
        });
        $('#postAskForm').click(function () {
            $('.text-box').each(function () {
                var name = getNameAttr($(this));
                if ($.trim($(this).val()) == name + '...') {
                    $(this).val('');
                }
            });
        });
    });
    function getNameAttr(e) {
        return $(e).attr('name');
    }
</script>
<div id="askForm">
    @using (Html.BeginForm())
    {
        @Html.ValidationMessageFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.ValidationMessageFor(model => model.Email)
        @Html.EditorFor(model => model.Email)

        @Html.ValidationMessageFor(model => model.Message)
        @Html.TextAreaFor(model => model.Message, new { @class = "text-box" })
        <input type="submit" value="Send" id="postAskForm" />
    } 
</div>